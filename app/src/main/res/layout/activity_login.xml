<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vermelho"
    tools:context=".Login">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mc_donalds"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="135dp"
        android:text="Login"
        android:textColor="@color/amarelo"
        android:textSize="80dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/caixinhaEmail"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@drawable/quadrado"
        android:hint="Insira o email"
        android:textColorHint="@color/branco"
        android:paddingLeft="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="270dp"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/caixinhaSenha"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@drawable/quadrado"
        android:hint="Insira sua senha"
        android:textColorHint="@color/branco"
        android:paddingLeft="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="335dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/botaoEntrar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Entrar"
        android:backgroundTint="@color/amarelo"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="410dp"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:text="Esqueceu a senha?"
        android:textStyle="bold"
        android:textColor="@color/amarelo"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="470dp"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Cadastre -se aqui"
        android:textStyle="bold"
        android:textColor="@color/branco"
        android:backgroundTint="@color/amarelo"
        android:layout_marginLeft="138dp"
        android:id="@+id/botaoCadastro"
        android:layout_marginTop="520dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/google_icon"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="190dp"
        android:src="@drawable/image_removebg_preview__26_"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="260dp"
        android:src="@drawable/tik_tok"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/olho_open_removebg_preview"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="340dp"/>


</RelativeLayout>